
@{
    ViewData["Title"] = "MeetingPageView";
}

<style>
    .button {
        border: none;
        color: white;
        padding: 15px 32px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        margin: 4px 2px;
        cursor: pointer;
    }

    /* Green */
    .buttonJoin {
        background-color: #4CAF50;
    }

    /* Red */
    .buttonDecline {
        background-color: #ff0000;
    }

    /* Blue */
    .buttonSnooze {
        background-color: #ff0000;
    }
</style>

<script>
    function clickJoin() {
        document.getElementById("buttonSnooze").innerHTML = "Hello World";
    }
</script>

<h1>MeetingPageView</h1>
<button class="button buttonJoin">Join</button>
<button class="button buttonSnooze" onclick="clickJoin">Running Late</button>
<div id="myDropdown" class="dropdown-content">
    <a href="#">Link 1</a>
    <a href="#">Link 2</a>
    <a href="#">Link 3</a>
</div>
<button class="button buttonDecline">Decline</button>
